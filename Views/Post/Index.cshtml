@model IEnumerable<Tarea3.DTO.PostDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Posts</h1>
<a asp-action="Create" class="btn btn-primary">Crear Post</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.title)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.id">Ver detalles</a>
                </td>
                <td>
                    <form asp-controller="Post" asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@item.id" />
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>